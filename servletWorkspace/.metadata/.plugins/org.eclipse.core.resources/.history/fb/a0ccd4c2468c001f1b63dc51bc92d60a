package test;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/join/view")
public class JoinViewController extends HttpServlet{

	@Override
	protected void service(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
		PrintWriter out = resp.getWriter();
		out.write("<!DOCTYPE html>");
		out.write("<html lang=\"ko\">");
		out.write("<head>");
		out.write("<style>");
		out.write("form {");
		out.write("width: 300px;");
		out.write("height: 100px;");
		out.write("}");
		out.write("#outer{\r\n"
				+ "            display:grid;\r\n"
				+ "            grid-template-columns: 100px 200px;\r\n"
				+ "            grid-template-rows:1fr;\r\n"
				+ "\r\n"
				+ "        }");
		out.write("        #outer > div > div > input {\r\n"
				+ "            width: 200px;\r\n"
				+ "            box-sizing: border-box;\r\n"
				+ "        }\r\n"
				+ "\r\n"
				+ "        #outer > div {\r\n"
				+ "            display:flex;\r\n"
				+ "            flex-direction: column;\r\n"
				+ "        }\r\n"
				+ "        \r\n"
				+ "        form > div:nth-child(2){\r\n"
				+ "            text-align: right;\r\n"
				+ "        }");
		out.write("");

		out.write("</style>");
		out.write("</head>");
		out.write("<body>");
		out.write("<h1>");
		out.write("Join");
		out.write("</h1>");
		out.write("<hr>");
		out.write("    <form>\r\n"
				+ "        <div id=\"outer\">\r\n"
				+ "            <div>\r\n"
				+ "                <div>ID</div>\r\n"
				+ "                <div>PASSWORD</div>\r\n"
				+ "                <div>NICK</div>\r\n"
				+ "            </div>\r\n"
				+ "            <div>\r\n"
				+ "                <div><input type=\"text\" id=\"userId\"></div>\r\n"
				+ "                <div><input type=\"password\" id=\"userPwd\"></div>\r\n"
				+ "                <div><input type=\"text\" id=\"userNick\"></div>\r\n"
				+ "            </div>\r\n"
				+ "        </div>\r\n"
				+ "        <div><input type=\"submit\" value=\"JOIN\"></div>\r\n"
				+ "    </form>");
		out.write("</body>");
		out.write("</html>");
	}
}
