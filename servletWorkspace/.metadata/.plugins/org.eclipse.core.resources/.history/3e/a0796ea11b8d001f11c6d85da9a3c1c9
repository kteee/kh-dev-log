package com.kh.app.board.controller;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/board/insert")
public class BoardInsertController extends HttpServlet{
	
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		// view page (화면을 보여주는 작업)
		req.getRequestDispatcher("/WEB-INF/views/board/insert.jsp").forward(req, resp);
	}
	
	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		// process data (데이터를 처리하는 작업)
		
		// data
		req.setCharacterEncoding("UTF-8"); // 데이터 꺼내기 전 인코딩 처리해야 잘 나옴
		String title = req.getParameter("title");
		String content = req.getParameter("content");
		
		// DB에 인서트 해야하지만,, 출력으로 대체,, 
		System.out.println(title);
		System.out.println(content);
		
		// result
		int result = 1;
		
		if(result == 1) {
			// 작성 성공 => 게시글 목록
			resp.sendRedirect("/app09/board/list");
		}
		else {
			// 작성 실패 => 에러 페이지
		}
	}
}
